{
  "name": "args",
  "version": "2.0.0",
  "description": "Minimal toolkit for building CLIs",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "gulp",
    "prepublish": "gulp transpile",
    "pretest": "gulp transpile",
    "test": "xo && ava"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "add-module-exports"
    ]
  },
  "repository": "leo/args",
  "greenkeeper": {
    "emails": false
  },
  "engines": {
    "node": ">= 6.0.0"
  },
  "keywords": [
    "cli",
    "command",
    "arguments",
    "util",
    "bin",
    "commander",
    "minimist",
    "binary",
    "parser",
    "option",
    "flags",
    "cmd",
    "utility",
    "helper",
    "terminal",
    "console"
  ],
  "xo": {
    "esnext": true,
    "space": true,
    "semicolon": false,
    "rules": {
      "xo/no-process-exit": 0,
      "max-lines": 0,
      "ava/no-ignored-test-files": 0
    }
  },
  "author": "leo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/leo/args/issues"
  },
  "homepage": "https://github.com/leo/args#readme",
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-plugin-add-module-exports": "^0.2.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-register": "^6.14.0",
    "execa": "^0.4.0",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-cached": "^1.1.0",
    "xo": "^0.16.0"
  },
  "dependencies": {
    "camelcase": "^3.0.0",
    "chalk": "^1.1.3",
    "loud-rejection": "^1.3.0",
    "minimist": "^1.2.0",
    "pkginfo": "^0.4.0"
  }
}
