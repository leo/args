{
  "name": "args",
  "version": "2.3.0",
  "description": "Minimal toolkit for building CLIs",
  "files": [
    "index.js"
  ],
  "scripts": {
    "test": "xo && ava"
  },
  "repository": "leo/args",
  "engines": {
    "node": ">= 6.6.0"
  },
  "keywords": [
    "cli",
    "command",
    "arguments",
    "util",
    "bin",
    "commander",
    "minimist"
  ],
  "xo": {
    "esnext": true,
    "space": true,
    "semicolon": false,
    "rules": {
      "unicorn/no-process-exit": 0,
      "max-lines": 0,
      "ava/no-ignored-test-files": 0,
      "import/no-unresolved": 0
    }
  },
  "author": "leo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/leo/args/issues"
  },
  "homepage": "https://github.com/leo/args#readme",
  "devDependencies": {
    "ava": "0.18.2",
    "execa": "0.6.0",
    "xo": "0.17.0"
  },
  "dependencies": {
    "camelcase": "4.0.0",
    "chalk": "1.1.3",
    "minimist": "1.2.0",
    "pkginfo": "0.4.0"
  }
}
